---
const { frontmatter } = Astro.props
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

	<style>
		body {
			padding: 0;
			margin: 0;
		}
		img {
			max-width: 100%;
		}
		article {
			padding: 1rem;
		}
	</style>
  </head>
  <body>
    <picture>
        <source srcset={frontmatter.largeImage} media="(min-width: 600px)" />
        <img src={frontmatter.defaultImage} />
    </picture>
    <article>
      <h1>{frontmatter.title}</h1>
      <slot />
    </article>
  </body>
</html>